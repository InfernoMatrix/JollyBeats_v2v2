<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Browse Songs - Music Spot</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <header>
      <h1><a href="/">ðŸŽµ Music Spot</a></h1>
      <nav>
        <a href="/songs">Songs</a>
        <a href="/playlists">Playlists</a>
        <a href="/forum">Forum</a>
        <a href="/logout" class="btn-logout">Logout (<%= user.username %>)</a>
      </nav>
    </header>

    <main class="content">
      <div class="page-header">
        <h2>All Songs</h2>
        <a href="/songs/upload" class="btn btn-primary">Upload New Song</a>
      </div>

      <!-- Search Form -->
      <div class="search-box">
        <form action="/songs" method="GET" class="search-form">
          <input type="text" name="search" placeholder="Search by title, artist, or album..." value="<%= search %>">
          <input type="text" name="genre" placeholder="Genre" value="<%= genre %>">
          <input type="text" name="artist" placeholder="Artist" value="<%= artist %>">
          <button type="submit" class="btn btn-secondary">Search</button>
          <a href="/songs" class="btn btn-secondary">Clear</a>
        </form>
      </div>

      <!-- Songs List -->
      <div class="songs-list">
        <% if (songs.length === 0) { %>
          <p class="no-data">No songs found. Be the first to upload!</p>
        <% } else { %>
          <table class="data-table">
            <thead>
              <tr>
                <th>Title</th>
                <th>Artist</th>
                <th>Album</th>
                <th>Genre</th>
                <th>Year</th>
                <th>Uploaded By</th>
                <th>Play</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% songs.forEach(song => { %>
                <tr>
                  <td><%= song.title %></td>
                  <td><%= song.artist %></td>
                  <td><%= song.album || '-' %></td>
                  <td><%= song.genre || '-' %></td>
                  <td><%= song.year || '-' %></td>
                  <td><%= song.uploadedBy.username %></td>
                  <td>
                    <audio controls>
                      <source src="/songs/stream/<%= song.filename %>" type="audio/mpeg">
                      Your browser does not support audio playback.
                    </audio>
                  </td>
                  <td class="actions">
                    <% if (song.uploadedBy._id.toString() === user.id) { %>
                      <a href="/songs/edit/<%= song._id %>" class="btn-small">Edit</a>
                      <form action="/songs/delete/<%= song._id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this song?');">
                        <button type="submit" class="btn-small btn-danger">Delete</button>
                      </form>
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } %>
      </div>
    </main>

    <footer>
      <p>&copy; 2025 Music Spot</p>
    </footer>
  </div>
</body>
</html>

